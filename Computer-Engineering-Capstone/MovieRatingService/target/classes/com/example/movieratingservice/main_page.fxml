<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.movieratingservice.MainPage" spacing="10" style="-fx-padding: 10;">
    <spacing>20.0</spacing>
    <TextField fx:id="searchField" promptText="Search movies..." />
    <ComboBox fx:id="genreComboBox" promptText="Filter by Genre">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Action"/>
                <String fx:value="Comedy"/>
                <String fx:value="Drama"/>
                <String fx:value="Sci-Fi"/>
                <String fx:value="Thriller"/>
            </FXCollections>
        </items>
    </ComboBox>
    <ListView fx:id="movieListView" prefWidth="400" prefHeight="300">
        <placeholder>
            <Label text="No movies found"/>
        </placeholder>
    </ListView>
</VBox>
